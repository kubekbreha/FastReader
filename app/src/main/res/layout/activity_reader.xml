<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reader.ReaderActivity">

    <android.support.v4.widget.Space
        android:id="@+id/activity_reader_status_space"
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <ImageButton
        android:id="@+id/activity_reader_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/activity_main_currentWord_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:textColor="?android:attr/colorAccent"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/activity_reader_running_imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_play" />


    <ImageButton
        android:id="@+id/activity_reader_restart_imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/activity_reader_running_imageButton"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_restart" />


    <TextView
        android:id="@+id/activity_reader_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_reader_restart_imageButton"
        android:layout_above="@+id/activity_reader_currentSpeed_textView"
        android:gravity="center"
        android:text="hit"
        android:textColor="?android:attr/colorAccent"
        android:textSize="25sp"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:id="@+id/activity_reader_currentSpeed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="1200 (milis between words)"
        android:textColor="?android:attr/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/activity_reader_seekBar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:max="1150" />


</RelativeLayout>